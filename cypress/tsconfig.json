{
    "compilerOptions": {
        "target": "es5",
        "lib": ["es5", "dom"],
        "types": ["cypress", "node"],
        "allowJs": true,
        "isolatedModules": false,
        "moduleResolution": "node",
        "baseUrl": "..",
        "paths": {
            "@/*": ["./src/*"]
        },
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "strict": false,
        "noImplicitAny": false,
        "jsx": "react"
    },
    "include": ["**/*.ts", "**/*.tsx"]
}
